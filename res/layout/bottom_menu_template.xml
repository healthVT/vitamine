<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@+id/bottomMenuTemplate"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="bottom"
                  android:animateLayoutChanges="true">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/vitaminOption" android:orientation="horizontal"
                android:background="@color/backgroundMainColor" android:gravity="center_vertical">

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/calculateHeight"
                android:orientation="horizontal"
                android:background="@color/backgroundMainColor"
                android:gravity="center"
                android:visibility="gone"
                android:id="@+id/nextLayout">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/nextButton"
                      android:text="Calculate"
                      android:textSize="12sp"
                      android:gravity="center"
                      android:textColor="@color/backgroundMainColor"
                      android:textStyle="bold"
                      android:background="@drawable/radio_button"/>

        </LinearLayout>

        <View android:layout_width="fill_parent" android:layout_height="1dp" android:background="@color/white"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottomHeight"
                android:layout_gravity="bottom"
                android:background="#fe5a5a">
            <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/bottomItemLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bottomHeight"
                    android:layout_gravity="bottom">
                    <!--android:background="@color/popupBackground">-->
                <ImageView android:id="@+id/navigateDaily"
                           android:clickable="true"
                           android:src="@drawable/icon_today"
                           android:scaleType="fitCenter"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:tag="icon_today"
                           android:layout_height="wrap_content"/>

                <ImageView android:id="@+id/navigateChart"
                           android:src="@drawable/icon_track"
                           android:layout_width="80dp"
                           android:tag="icon_track"
                           android:layout_height="wrap_content"/>

                <ImageView android:id="@+id/navigateFavorite"
                           android:src="@drawable/icon_favorite"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:tag="icon_favorite"
                           android:layout_height="wrap_content"/>

                <ImageView android:id="@+id/navigateProfile"
                           android:src="@drawable/icon_profile"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:tag="icon_profile"
                           android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</merge>