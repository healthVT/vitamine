<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="titleBackground">
        <item name="android:background">@color/backgroundMainColor</item>
    </style>

    <dimen name="dpFront">15sp</dimen>
    <dimen name="line">1sp</dimen>
    <dimen name="paddingTop">10sp</dimen>
    <dimen name="paddingRight">20sp</dimen>
    <dimen name="paddingLeft">20sp</dimen>
    <dimen name="paddingBottom">10sp</dimen>
    <dimen name="vitaminCircleWidth">100sp</dimen>
    <dimen name="vitaminCircleHeight">90sp</dimen>
    <dimen name="vitaminCircleRadius">42sp</dimen>
    <dimen name="vitaminMarginLeft">10sp</dimen>
    <dimen name="vitaminCircleText">20sp</dimen>
    <dimen name="vitaminCircleStroke1">1sp</dimen>
    <dimen name="vitaminCircleStroke2">2sp</dimen>
    <dimen name="vitaminCircleStroke3">3sp</dimen>
    <dimen name="vitaminCircleStroke4">4sp</dimen>

    <style name="defaultStyle" parent="@android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorPrimary">#616161</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:editTextStyle">@style/vtEditTextStyle</item>
        <item name="android:buttonStyle">@style/vtButtonStyle</item>
        <item name="android:textViewStyle">@style/vtTextViewStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/vtSpinnerStyle</item>
        <item name="android:windowTitleBackgroundStyle">@style/titleBackground</item>
        <item name="android:autoCompleteTextViewStyle">@style/vtAutoCompleteStyle</item>
        <item name="android:windowTitleSize">40dp</item>
    </style>

    <style name="vtEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/edit_text_shape</item>
    </style>

    <style name="vtTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="vtButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#616161</item>
    </style>

    <style name="vtSpinnerStyle" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="vtAutoCompleteStyle" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>