<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="healthVT.vitamine"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="14"/>
    <application android:icon="@drawable/ic_launcher" android:theme="@style/defaultStyle">

        <meta-data android:name="com.google.android.gms.version"
                   android:value="@integer/google_play_services_version" />

        <activity android:name="MyActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity" android:label="@string/app_name" android:theme="@style/defaultStyle" android:screenOrientation="locked"/>
        <activity android:name=".DailyActivity" android:label="@string/app_name" android:theme="@style/defaultStyle" android:screenOrientation="locked"/>
        <activity android:name=".SummaryActivity" android:label="@string/app_name" android:theme="@style/defaultStyle" android:screenOrientation="locked"/>
        <activity android:name=".VitaminChartActivity" android:label="@string/app_name" android:theme="@style/defaultStyle" android:screenOrientation="locked"/>
        <activity android:name=".SelfInfoActivity" android:label="@string/app_name" android:theme="@style/defaultStyle" android:screenOrientation="locked"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />


</manifest>
